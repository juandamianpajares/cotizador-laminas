# ============================================================================
# DATABASE
# ============================================================================
# For local development (without Docker)
# DATABASE_URL="mysql://user:password@localhost:3306/cotizador_laminas"

# For Docker Compose (use this)
DATABASE_URL="mysql://juan:Cambiala1234@db:3306/cotizador_laminas"

# MySQL Configuration (for docker-compose.yml)
MYSQL_ROOT_PASSWORD=Cambiala1234
MYSQL_DATABASE=cotizador_laminas
MYSQL_USER=juan
MYSQL_PASSWORD=Cambiala1234
MYSQL_PORT=3306

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=dev 
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_PORT=3000

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ============================================================================
# PHPMYADMIN
# ============================================================================
PHPMYADMIN_PORT=8080

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
# For sending email notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@cotizador.com

# ============================================================================
# WHATSAPP INTEGRATION (Optional)
# ============================================================================
# For WhatsApp Business API (future implementation)
WHATSAPP_BUSINESS_NUMBER=
WHATSAPP_API_KEY=
WHATSAPP_API_URL=

# ============================================================================
# FILE UPLOAD - CLOUDINARY (Optional - Sprint 10/11)
# ============================================================================
# For cloud storage of vehicle photos
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============================================================================
# VEHICLE IMAGES API (Optional - Sprint 8)
# ============================================================================
# External API for fetching vehicle images
NEXT_PUBLIC_VEHICLE_API_URL=

# ============================================================================
# REDIS (Optional - for caching)
# ============================================================================
# REDIS_URL=redis://redis:6379
# REDIS_PORT=6379

# ============================================================================
# MONITORING & ANALYTICS (Optional)
# ============================================================================
# NEXT_PUBLIC_GA_TRACKING_ID=
# SENTRY_DSN=

# ============================================================================
# SECURITY
# ============================================================================
# CORS allowed origins (comma separated)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate limiting
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=900000

# ============================================================================
# DEVELOPMENT
# ============================================================================
# Enable/disable features
# NEXT_TELEMETRY_DISABLED=1
# DEBUG=true
